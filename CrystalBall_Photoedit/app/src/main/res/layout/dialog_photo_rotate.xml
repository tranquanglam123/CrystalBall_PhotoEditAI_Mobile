<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:background="@color/main_back">

            <com.samhung.crystalball.photoeditor.Widget.SuperImageView
                android:id="@+id/imageview_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="matrix" />

            <com.samhung.crystalball.photoeditor.Photoshop.Dialogs.Views.PhotoRotateView
                android:id="@+id/photo_rotateview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_sub_tool_bar_size"
                android:background="@android:color/background_light">
                <include layout = "@layout/sub_menu_photo_rotate" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_tool_bar_size"
                android:background="@color/color31"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/button_close"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginStart="10dip"
                    app:srcCompat="@drawable/btn_cancel" />

                <ImageView
                    android:id="@+id/button_accept"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dip"
                    app:srcCompat="@drawable/btn_accept" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>