<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hsv_sub_toolbar_edit"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/bottom_sub_tool_bar_size"
    android:overScrollMode="never"
    android:scrollbars="none">


    <RadioGroup
        android:id="@+id/rdg_crop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_crop_origin"
            style="@style/sub_toolbar_crop_radio_style"
            android:drawableTop="@drawable/radio_crop_origin"
            android:text="원본비률"
            android:textColor="@color/color_radio_text" />

        <RadioButton
            android:id="@+id/rb_crop_custom"
            style="@style/sub_toolbar_crop_radio_style"
            android:checked="true"
            android:drawableTop="@drawable/radio_crop_custom"
            android:text="자유비률"
            android:textColor="@color/color_radio_text" />

        <RadioButton
            android:id="@+id/rb_crop_1_1"
            style="@style/sub_toolbar_crop_radio_style"
            android:drawableTop="@drawable/radio_crop_1_1"
            android:text="1:1"
            android:textColor="@color/color_radio_text" />

        <RadioButton
            android:id="@+id/rb_crop_9_16"
            style="@style/sub_toolbar_crop_radio_style"
            android:drawableTop="@drawable/radio_crop_9_16"
            android:text="9:16"
            android:textColor="@color/color_radio_text" />

        <RadioButton
            android:id="@+id/rb_crop_16_9"
            style="@style/sub_toolbar_crop_radio_style"
            android:drawableTop="@drawable/radio_crop_16_9"
            android:text="16:9"
            android:textColor="@color/color_radio_text" />

        <RadioButton
            android:id="@+id/rb_crop_3_4"
            style="@style/sub_toolbar_crop_radio_style"
            android:drawableTop="@drawable/radio_crop_3_4"
            android:text="3:4"
            android:textColor="@color/color_radio_text" />

        <RadioButton
            android:id="@+id/rb_crop_4_3"
            style="@style/sub_toolbar_crop_radio_style"
            android:drawableTop="@drawable/radio_crop_4_3"
            android:text="4:3"
            android:textColor="@color/color_radio_text" />
    </RadioGroup>
</HorizontalScrollView>