<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hsv_sub_toolbar_edit"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/bottom_sub_tool_bar_size"
    android:overScrollMode="never"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dip"
        android:paddingStart="10dip">

        <RelativeLayout
            android:id="@+id/BTN_bgBlur"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/BTN_bgAdd"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onButtonClick">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/btn_background_blur" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:layout_centerHorizontal="true"
                android:text="배경흐림"
                android:textColor="@color/color_hsv_menu_text"
                android:textSize="11dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BTN_pngSave"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/BTN_fvEraser"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onButtonClick">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/btn_png_save" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:text="보관"
                android:textColor="@color/color_hsv_menu_text"
                android:textSize="11dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BTN_bgAdd"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/BTN_pngSave"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onButtonClick">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/btn_background_add" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:text="배경추가"
                android:textColor="@color/color_hsv_menu_text"
                android:textSize="11dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BTN_fvEdit"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onButtonClick">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/btn_mask_edit" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:text="전경편집"
                android:textColor="@color/color_hsv_menu_text"
                android:textSize="11dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BTN_fvEraser"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/BTN_fvEdit"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onButtonClick">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/btn_fv_eraser" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:text="지우개"
                android:textColor="@color/color_hsv_menu_text"
                android:textSize="11dip" />
        </RelativeLayout>
    </RelativeLayout>
</HorizontalScrollView>