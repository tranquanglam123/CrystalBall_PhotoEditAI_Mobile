<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_bk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tool_bar_size"
            android:background="@color/color31"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/button_close"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginStart="10dip"
                android:padding="8dip"
                app:srcCompat="@drawable/btn_back" />

            <ImageView
                android:id="@+id/button_accept"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dip"
                android:visibility="invisible"
                app:srcCompat="@drawable/btn_accept" />
        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gridview_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_tool_bar_size"
        android:layout_marginTop="50dip"
        android:choiceMode="singleChoice"
        android:verticalSpacing="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tool_bar_size"
            android:background="@color/color31"
            android:gravity="center_vertical">

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>