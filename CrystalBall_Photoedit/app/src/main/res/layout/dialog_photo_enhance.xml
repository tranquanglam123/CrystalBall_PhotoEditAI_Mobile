<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:background="@color/main_back">

            <com.samhung.crystalball.photoeditor.Widget.SuperImageView
                android:id="@+id/imageview_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="matrix" />

            <com.samhung.crystalball.photoeditor.Widget.SuperImageView
                android:id="@+id/imageview_photo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="matrix" />

            <com.samhung.crystalball.widgets.PressableButton
                android:id="@+id/imv_preview"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dip"
                android:layout_marginEnd="20dip"
                app:srcCompat="@drawable/btn_preview" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@android:color/background_light"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="3dip"
                    android:paddingEnd="20dip"
                    android:paddingStart="20dip"
                    android:paddingTop="3dip">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/wm" />

                    <com.samhung.crystalball.widgets.Slider
                        android:id="@+id/seekBar_brightness"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_weight="1"
                        android:paddingEnd="10dip"
                        android:paddingStart="10dip"
                        app:slider_middle_value="50"
                        app:slider_progress="50"
                        app:slider_ripple_color="@color/checkbox_mark_color"
                        app:slider_ripple_radius="5dip"
                        app:slider_thumb_radius="7dip"
                        app:slider_tint_color="#FF568A" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="3dip"
                    android:paddingEnd="20dip"
                    android:paddingStart="20dip"
                    android:paddingTop="3dip">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        app:srcCompat="@drawable/wn" />

                    <com.samhung.crystalball.widgets.Slider
                        android:id="@+id/seekBar_contrast"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_weight="1"
                        android:paddingEnd="10dip"
                        android:paddingStart="10dip"
                        app:slider_middle_value="50"
                        app:slider_progress="50"
                        app:slider_ripple_color="@color/checkbox_mark_color"
                        app:slider_ripple_radius="5dip"
                        app:slider_thumb_radius="7dip"
                        app:slider_tint_color="#FF568A" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="3dip"
                    android:paddingEnd="20dip"
                    android:paddingStart="20dip"
                    android:paddingTop="3dip">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        app:srcCompat="@drawable/wo" />

                    <com.samhung.crystalball.widgets.Slider
                        android:id="@+id/seekBar_saturation"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_weight="1"
                        android:paddingEnd="10dip"
                        android:paddingStart="10dip"
                        app:slider_middle_value="50"
                        app:slider_progress="50"
                        app:slider_ripple_color="@color/checkbox_mark_color"
                        app:slider_ripple_radius="5dip"
                        app:slider_thumb_radius="7dip"
                        app:slider_tint_color="#FF568A" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_tool_bar_size"
                android:background="@color/color31"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/button_close"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginStart="10dip"
                    app:srcCompat="@drawable/btn_cancel" />

                <ImageView
                    android:id="@+id/button_accept"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dip"
                    app:srcCompat="@drawable/btn_accept" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>